<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_actionbarback_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/blueTranslucent"
    android:orientation="horizontal"
     >
    
    <TextView
        android:id="@+id/action_bar_preview_txt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
      
        android:background="@drawable/main_actionbar_btn_bg"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/menu_manage"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
    
      <TextView 
        android:id="@+id/base_back_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ka_icon_back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/action_bar_preview_txt"
       />
    
</RelativeLayout>
